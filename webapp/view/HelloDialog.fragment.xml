<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Dialog
		id="helloDialog"
		title="{i18n>helloDialogTitle}"
	>
      <content>
         <core:Icon
            src="sap-icon://hello-world"
            size="4rem"
            class="sapUiMediumMargin"/>
      </content>
		<beginButton>
			<Button 
				text="Begin button"
				press="onCloseHelloDialog"/>
			
		</beginButton>
	</Dialog>
</core:FragmentDefinition>