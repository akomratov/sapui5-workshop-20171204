<mvc:View
	controllerName="workshop.wt.controller.App"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true">
	<App>
		<pages>
			<Page title="{i18n>homePageTitle}">
				<content>
					<Panel headerText="{i18n>homePanelText}">
						<content>
							<Text text="Hello XMLView"></Text>
							<Text text="Second Text"></Text>
							<Button text="{i18n>showHelloButtonText}" press="onShowHello"></Button>
							<Input
								value="{/recipient/name}"
								description="Hello {/recipient/name}"
								valueLiveUpdate="true"
								width="40%"
							/>
						</content>
					</Panel>
				</content>
			</Page>
		</pages>
	</App>

</mvc:View>

